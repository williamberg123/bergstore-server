{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"airbnb-base"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [
					".js",
					".jsx",
					".ts",
					".tsx"
				]
			}
		}
	},
	"rules": {
		"indent": "off",
		"no-tabs": "off",
		"consistent-return": "off",
		"dot-notation": "off",
		"no-underscore-dangle": "off",
		"import/extensions": "off",
		"import/prefer-default-export": "off",
		"max-len": "off",
		"arrow-body-style": "off",
		"camelcase": "off"
	}
}
