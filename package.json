{
	"name": "server",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"start": "npm run prod",
		"prod": "NODE_ENV=production npm-run-all build server",
		"server": "node ./dist-server/bin/www",
		"dev": "NODE_ENV=development npm-run-all build server",
		"transpile": "babel ./src --out-dir dist-server",
		"clean": "rimraf dist-server",
		"build": "npm-run-all clean transpile",
		"watch:dev": "nodemon"
	},
	"dependencies": {
		"@babel/cli": "^7.19.3",
		"@babel/core": "^7.20.5",
		"@babel/preset-env": "^7.20.2",
		"bcrypt": "^5.1.0",
		"cookie-parser": "~1.4.4",
		"debug": "~2.6.9",
		"express": "~4.16.1",
		"mongoose": "^6.7.4",
		"morgan": "~1.9.1",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2"
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"nodemonConfig": {
		"exec": "npm run dev",
		"watch": [
			"src/*",
			"public/*"
		],
		"ignore": [
			"**/__tests__/**",
			"*.test.js",
			"*.spec.js"
		]
	}
}
